<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.MovieApp.Headline1" parent="Theme.MovieApp">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/title_font</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="TextAppearance.MovieApp.Headline2" parent="Theme.MovieApp">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">@dimen/title_font</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MovieApp.Subtitle1" parent="Theme.MovieApp">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/subtitle_font</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.MovieApp.Subtitle2" parent="Theme.MovieApp">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">@dimen/medium_font</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MovieApp.Body1" parent="Theme.MovieApp">
        <item name="android:textColor">@color/grey_main</item>
        <item name="android:textSize">@dimen/regular_font</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="TextAppearance.MovieApp.Body2" parent="Theme.MovieApp">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/regular_font</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="TextAppearance.MovieApp.Caption" parent="Theme.MovieApp">
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:textSize">@dimen/medium_font</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="TextAppearance.MovieApp.Shape" parent="Theme.MovieApp">
        <item name="android:textColor">@color/grey_light</item>
        <item name="android:textSize">@dimen/small_font</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="MovieApp.MaterialComponents.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <!-- Chip background color selector -->
        <item name="chipBackgroundColor">@color/background_color_chip_state</item>
        <!-- Chip text color selector -->
        <item name="android:textColor">@color/text_color_chip_state_list</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.SelectedCornerRadius" parent="Theme.MovieApp">
        <item name="cornerSizeBottomLeft">40dp</item>
        <item name="cornerFamilyTopRight">rounded</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.MediumComponent" parent="Theme.MovieApp">
        <item name="cornerSizeBottomLeft">35dp</item>
        <item name="cornerSizeTopLeft">35dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
    </style>

    <!-- TODO: Styles for Movie Tags -->
</resources>